# Registry Configuration
REGISTRY_HOST=0.0.0.0
REGISTRY_PORT=8080
REGISTRY_URL=http://localhost:8080

# Database Configuration
# For PostgreSQL (recommended):
DATABASE_URL=postgres://mdlibs:secret@postgres:5432/mdlibs
# For SQLite (alternative):
# DATABASE_URL=sqlite:///data/mdlibs.db

# PostgreSQL Configuration (when using PostgreSQL)
POSTGRES_USER=mdlibs
POSTGRES_PASSWORD=change-this-password
POSTGRES_DB=mdlibs

# Storage Configuration
STORAGE_PATH=/var/lib/mdlibs/storage
STORAGE_MAX_FILE_SIZE_MB=100

# Security Configuration
# IMPORTANT: Generate a secure random secret:
# openssl rand -base64 32
JWT_SECRET=change-this-to-a-secure-random-string
TOKEN_EXPIRY_DAYS=90

# Rate Limiting
RATE_LIMIT_ANON=60
RATE_LIMIT_AUTH=5000

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Initial Admin User (created on first start)
ADMIN_USERNAME=admin
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=change-this-password

# CORS (comma-separated list of allowed origins)
# CORS_ALLOWED_ORIGINS=https://example.com,https://app.example.com
